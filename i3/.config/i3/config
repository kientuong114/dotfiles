# take a screenshot of a screen region and copy it to a clipboard
bindsym --release $mod+Shift+Print exec "escrotum -sC"

# take a screenshot of a screen region and save it in the screenshot folder
bindsym --release $mod+Ctrl+Shift+Print exec "escrotum -s ~/pictures/screenshots/%Y-%m-%d-%H%M%s_screenshot.png"

# take a screenshot of a the entire screen and copy it to a clipboard
bindsym --release $mod+Print exec "escrotum -C"

# take a screenshot of a the entire screen and save it in the screenshot folder
bindsym --release $mod+Ctrl+Print exec "escrotum ~/pictures/screenshots/%Y-%m-%d-%H%M%s_screenshot.png"

# Show the first scratchpad window
bindsym $mod+Ctrl+minus scratchpad show

#Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

bindsym $mod+Ctrl+l exec "light-locker-command -l"

# i3 gaps settings

gaps inner 10
